<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/pipe_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="false"
        android:layout_centerVertical="false"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:text="Turbulent vs Laminar Flow"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/pipe_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/pipe_title"
        android:layout_below="@+id/pipe_title"
        android:layout_marginRight="10dp"
        android:layout_marginTop="25dp"
        android:lineSpacingMultiplier="1.25"
        android:text="@string/pipe_content"
        android:textSize="18sp" />

    <ImageButton
        android:id="@+id/reyformula"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pipe_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:background="@null"
        android:clickable="true"
        android:maxWidth="150dp"
        android:onClick="reyformula"
        android:scaleType="matrix"
        android:src="@drawable/rey_formula" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reyformula"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:text="Try to Press the Formula !" />

</RelativeLayout>