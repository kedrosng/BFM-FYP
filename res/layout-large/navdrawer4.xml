<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/impact_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="false"
        android:layout_centerVertical="false"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:text="@string/impact_title"
        android:textSize="18sp" />

    <Button
        android:id="@+id/button_waterjet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/impact_title"
        android:layout_below="@+id/impact_title"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:clickable="true"
        android:onClick="waterjet"
        android:text="WaterJet" />

    <Button
        android:id="@+id/button_nozzle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button_waterjet"
        android:layout_below="@+id/button_waterjet"
        android:layout_marginTop="15dp"
        android:clickable="true"
        android:onClick="Nozzle"
        android:text="Nozzle" />

    <Button
        android:id="@+id/buttons_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button_nozzle"
        android:layout_below="@+id/button_nozzle"
        android:layout_marginTop="15dp"
        android:clickable="true"
        android:onClick="spinner"
        android:text="Spinner" />

</RelativeLayout>