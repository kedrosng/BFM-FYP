<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/impact_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="false"
        android:layout_centerVertical="false"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:text="@string/impact_title"
        android:textSize="18sp" />

    <Button
        android:id="@+id/button_nozzle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_waterjet"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:background="@null"
        android:clickable="true"
        android:onClick="Nozzle"
        android:text="Nozzle" />

    <Button
        android:id="@+id/button_waterjet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/button_nozzle"
        android:layout_centerVertical="true"
        android:background="@null"
        android:clickable="true"
        android:onClick="waterjet"
        android:text="WaterJet" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignLeft="@+id/impact_title"
        android:layout_below="@+id/impact_title"
        android:layout_marginTop="18dp"
        android:src="@drawable/womanjet" />

</RelativeLayout>