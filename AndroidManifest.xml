<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kedros.basicfluidmech"
    android:versionCode="1"
    android:versionName="20140812b" >
    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="21" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/unnamed"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            
        </activity>
        <activity
            android:name=".Help"
            android:label="@string/title_activity_help"
            android:parentActivityName="com.kedros.basicfluidmech.MainActivity">
            <intent-filter >
                <action android:name="com.kedros.basicfluidmech.Help"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
            <meta-data 
                   android:name="android.support.PARENT_ACTIVITY"
                   android:value="come.kedros.basicfluidmech.MainActivity"/>
        </activity>
        <activity
            android:name=".SplashScreen"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
